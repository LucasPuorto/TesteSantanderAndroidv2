<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:layout_margin="8dp"
    app:cardCornerRadius="10dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp">

        <TextView
            android:id="@+id/activity_statement_recycler_view_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textSize="@dimen/text_size_default_18"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/activity_statement_recycler_view_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="01/05/2019"
            app:layout_constraintBaseline_toBaselineOf="@id/activity_statement_recycler_view_title"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/activity_statement_recycler_view_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Descrição"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_size_default_18"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@id/activity_statement_recycler_view_title" />

        <TextView
            android:id="@+id/activity_statement_recycler_view_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="R$ 1.000,00"
            android:textColor="@android:color/black"
            android:textSize="@dimen/text_size_default_18"
            app:layout_constraintBaseline_toBaselineOf="@id/activity_statement_recycler_view_description"
            app:layout_constraintEnd_toEndOf="@id/activity_statement_recycler_view_date" />

    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>